# Enable Rewrite Engine
RewriteEngine On

# Proxy requests to your Node.js app's port
# IMPORTANT: Replace YOUR_NODE_APP_PORT with the actual port from your Hostinger control panel.
RewriteRule ^(.*)$ http://127.0.0.1:YOUR_NODE_APP_PORT/$1 [P,L]

# Handle WebSocket connections for Next.js Fast Refresh (HMR)
RewriteCond %{REQUEST_URI} ^/_next/webpack-hmr [NC]
RewriteCond %{HTTP:Upgrade} websocket [NC]
RewriteRule .* ws://127.0.0.1:YOUR_NODE_APP_PORT/$0 [P,L]
